$primary-color = #337ab7;
border-radius(val)
  -webkit-border-radius: val
  -moz-border-radius: val
  border-radius: val
transition(val)
  -webkit-transition: val
  -moz-transition: val
  transition: val
.song
  font-size 12rem
.marketing figure
  background: #008000;
  padding :15px;
  border-radius :15px;
  text-align :center;
  margin-bottom :30px;
.marketing a
  display :block;
  color :#ffffff;
  font-size :20px;
.marketing h4
  font-size :24px;
.navbar-default .navbar-brand
  padding :0 15px;
  height :60px;
  line-height :60px;
  font-size :24px;
  color :$primary-color;
  span
    padding-right :15px;
.footer
   padding :30px 0;
   text-align :center;
.menu-sidebar
  margin :0;
  padding :0;
  list-style :none;
  li
    display :block;
    margin-bottom :15px;
    line-height :45px;
    transition(all 0.3s ease-in-out);
    &.active
      background :$primary-color;
      a
        color: #ffffff
    &:hover
        background :$primary-color;
    &:hover a
        color: #ffffff
      a
        display :block;
        padding :0px 15px;
        font-size 16px
.tool-manage
  margin-bottom :30px;
  overflow :hidden;
  border-bottom :1px solid $primary-color;
  padding-bottom :15px;
  h1.title-manage
      float :left;
      margin :0;
  .tool-main
      float :right
      div
        float :left ;
      .search-song
        position :relative;

tr.title-table
  background: #eeeeee;
.table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td
  padding 15px;
.action a
  display block;
  float left;
  margin: 0px 10px;
  cursor: pointer;
.search-song .ng-valid
  position: absolute;
  right: 100%;
  min-height: 36px;
  margin: 6px 8px;
  min-width: 220px;
  top:0;
.nav-mobile
  display: block;
  clear: both;
  transition(all 0.1s ease-in-out);
.well label
  width 90px;
  text-align right;
  margin-right 15px;
.well .form-control
  width :auto;
  min-width :300px;
  display:inline-block
.errorinput
  color: #850000;
  background: rgba(254, 186, 186, 0.5);
  border: 1px solid #850000;
.errorlabel
    color red
@media (max-width: 767px)
  .tool-manage .tool-main
    clear both;
    float left;

  .action a
    margin 5px;

  .tool-manage h1.title-manage
    margin-bottom 15px;
